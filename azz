#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    float a, b, x;
    std::cout << "Линейное уравнение: a * x = b;" << std::endl;
    std::cin >> a;
    std::cin >> b;
    std::cout << a << " * x = " << b << ";" << std::endl;
    std::cout << " x = " << b/a << ";" << std::endl;
    if (a = 0){
    
        std::cout << "На данный момент уравнение не имеет корней." <<std::endl;
        
    }
    if (a = 0, b = 0)
    {
        std::cout << "Множество всех действительных чисел" <<std::endl;
    }
    
    return 0;
}
